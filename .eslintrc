{
  "parser": "@typescript-eslint/parser",
  "extends": ["airbnb-typescript/base"],
  "env": { "jest": true },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "no-use-before-define": ["error", { "functions": false }],
    "import/prefer-default-export": "off"
  }
}
