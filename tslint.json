{
  "extends": "tslint-config-airbnb",
  "rules": {
    "max-len": [
      "error",
      {
        "code": 80
      }
    ],
    "variable-name": ["allow-pascal-case"],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ]
  }
}
